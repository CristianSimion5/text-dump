doctype html
html
  head
    title TextDump
    block head-scripts
      script(src="https://kit.fontawesome.com/8b7c12c2ba.js" crossorigin="anonymous")
    block styles
      link(rel="stylesheet" type="text/css" href="/css/style.css")
  body
    block main-content
      main.main-container
        if user
          p Logged in
        else
          p No user
        != messages('message', locals)
        if errors
          each error, i in errors
            div(class="alert alert-danger") #{error.msg}
        block content
        footer
          p Copyright &copy, 2019
    block end-scripts
